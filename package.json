{
  "name": "civil-bim-viewer",
  "version": "0.1.0",
  "description": "Open-source, browser-based BIM/IFC viewer for civil and civic engineering",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src tests --ext .ts,.tsx,.js",
    "lint:fix": "eslint src tests --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,css}\" \"tests/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,css}\" \"tests/**/*.{ts,js}\"",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "convert": "node scripts/convert-ifc.mjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xeokit/xeokit-sdk": "^2.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.0",
    "vite": "^6.4.1"
  }
}
